{
  "env": {
    "browser": true,
    "node": true,
    "amd": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:prettier/recommended"
  ],
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@app-config", "./src/config"]
        ],
        "extensions": [".js", ".json"]
      }
    }
  },
  "plugins": [],
  "ignorePatterns": ["dist/**/*.js"],
  "rules": {}
}
